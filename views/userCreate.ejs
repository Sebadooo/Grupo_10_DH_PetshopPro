<!DOCTYPE html>
<html>
<%- include('partials/head.ejs') %>

    <body>

        <%- include('partials/header.ejs') %>

            <%- include('partials/navbar.ejs') %>

                <main>
                    <h3 class="título">CREAR USUARIO</h3>
                    <div class="errorsBack">
                        <% if(locals && locals.errorMsg) { %> 
                         <% for (let error in errorMsg) { %>
                            <p class="errorMsg">
                                <%=errorMsg [error].msg %>
                            </p>
                            <% } %>
                            <% } %>
                    </div>
                    <section class="formularios">
                    
                        <div class="bannersLat">
                            <img class="bannerLat" src="/images/otros/Banner_Perro_Izq.jpg"/>
                          </div>
                        <form class="registro" action="/userCreate" method="POST" enctype="multipart/form-data">
  
                            <p class="etiquetas1">  
                                <label for="nombre">Nombre: </label>
                            </p>
                            <p class="input">
                                <input type="text" name="first_name" class="first_name"value="<%= locals.oldData ? oldData.first_name: null %>">
                                <i class="fas fa-check-circle"></i>
                            </p>
                                                                        
                            <p class="etiquetas1">
                                <label for="apellido">Apellido: </label>
                            </p>
                            <p class="input">
                                <input type="text" name="last_name" class="last_name" value="<%= locals.oldData ? oldData.last_name: null %>">
                                <i class="fas fa-check-circle"></i>
                                <i class="fas fa-exclamation-circle"></i>
                                <small>error mesage</small>
                            </p>
                            
                            <p class="etiquetas1">
                                <label for="email">E-mail: </label>
                            </p>
                            <p class="input">
                                <input type="email" name="email" class="email" value="<%= locals.oldData ? oldData.email: null %>">
                            </p>
                            
                            <p class="etiquetas1">
                                <label for="clave">Contraseña: </label>
                            </p>
                            <p class="input">
                                <input type="password" name="password" class="password">
                                <i class="fas fa-check-circle"></i>
                                <i class="fas fa-exclamation-circle"></i>
                                <small>error mesage</small>
                            </p>
                            
                        <br>

                            <p class="etiquetas1">
                                <label for="avatar">Avatar: </label>
                            </p>
                            <p class="botonFile">    
                                <input type="file" id="avatar" name="avatar" accept=".JPG,.jpg,.jpeg,.png,.gif">
                            </p>
                            
                            <p class="boton1">
                                <button type="submit">CREAR</button>
                            </p>
                        </form>
                    </div>
                        <div class="bannersLat">
                            <img class="bannerLat" src="/images/otros/Banner_Gato_Der.jpg"/>
                          </div>
                    </section>
                    <!-- <script src="/javascript/registerVal.js" type="text/javascript"></script> -->
                </main>

                <%- include('partials/footer.ejs') %>

    </body>

</html>