<!DOCTYPE html>
<html>
<%- include('partials/head.ejs') %>

    <body>
        <%- include('partials/header.ejs') %>

        <%- include('partials/navbar.ejs') %>

            <main>
                <section class="formularios">
                    <form action="products/create" method="POST">

                        <p class="etiquetas1">
                            <label for="product" class="form-label">NOMBRE DEL PRODUCTO </label>
                        </p>
                        <p class="inputs1">
                            <input type="text" id="name" name="producto" placeholder="Ingresa nombre acá" class="form-input">
                        </p>
                        <p class="etiquetas1">
                            <label for="price" class="form-label">PRECIO </label>
                        </p>
                        <p class="inputs1">
                            <input type="number" id="price" name="price" placeholder="$???" class="form-input">
                        </p>
                        <p class="etiquetas1">
                            <label for="discount" class="form-label">% DE DESCUENTO </label>
                        </p>
                        <p class="inputs1">
                            <input type="text" id="discount" name="discount" placeholder="%???" class="form-input">
                        </p>
                        <p class="etiquetas1">
                            <label for="category" class="form-label">CATEGORÍA </label>
                        </p>
                        <p class="inputs1">
                            <select name="category" id="product_category" class="form-input">
                            <option value="">ELEGÍ UNA OPCIÓN</option>
                            <option value="perros">PERROS</option>
                            <option value="gatos">GATOS</option>
                            <option value="accesorios">ACCESORIOS</option>
                        </select>
                        </p>
                        <p class="etiquetas1">
                            <label for="description" class="form-label">DESCRIPCIÓN </label>
                        </p>
                        <p class="inputs1">
                            <textarea id="description" name="description" class="form-input"></textarea>
                        </p>

                        <p class="boton1">
                            <button type="submit">CREAR!</button>
                        </p>
                    </form>
                </section>
            </main>
            <%- include('partials/footer.ejs') %>
    </body>

</html>