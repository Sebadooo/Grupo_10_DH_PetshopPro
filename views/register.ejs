<!DOCTYPE html>
<html>
<%- include('partials/head.ejs') %>

    <body>

        <%- include('partials/header.ejs') %>

        <%- include('partials/navbar.ejs') %>

        <main>
            <h3 class="título">REGISTRATE</h3>
            <section class="formularios">
                <form action="/users/register" method="POST"
                enctype="multipart/form-data">
                        <p class="etiquetas1">
                            <label for="nombre">Tu nombre: </label>
                        </p>
                        <p class="inputs1">
                            <input type="text" name="first_name">
                        </p>
                        <p class="etiquetas1">
                            <label for="apellido">Tu apellido: </label>
                        </p>
                        <p class="inputs1">
                            <input type="text" name="last_name">
                        </p>
                        <p class="etiquetas1">
                            <label for="email">Tu e-mail: </label>
                        </p>
                        <p class="inputs1">
                            <input type="email" name="email">
                        </p>
                        <p class="etiquetas1">
                            <label for="clave">Creá tu contraseña: </label>
                        </p>
                        <p class="inputs1">
                            <input type="password" name="password">
                        </p>
                        <!-- <p class="etiquetas1">
                            <label for="clave">Confirma la contraseña: </label>
                        </p> -->
                        <p class="inputs1">
                            <input type="password" name="password">
                        </p>
                        <p class="inputs1">
                            <label for="avatar">Ingresa tu foto de perfil: </label>
                            <input type="file" name="avatar" accept=".jpg"multiple>
                        </p>
                        <p class="boton1">
                            <button type="submit">REGISTRATE!</button>
                        </p>
                    </form>
                </section>
            </main>
                    
            <%- include('partials/footer.ejs') %>
        </body>

</html>
